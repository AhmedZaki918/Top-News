<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- style for the parent ViewGroup. -->
    <style name="rootView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd">@dimen/rootView_paddingEnd</item>
        <item name="android:paddingStart">@dimen/rootView_paddingStart</item>
        <item name="android:paddingLeft">@dimen/rootView_paddingLeft</item>
        <item name="android:paddingRight">@dimen/rootView_paddingRight</item>
    </style>

    <!-- style for TextView section. -->
    <style name="section">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/section</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- style for TextView author. -->
    <style name="author">
        <item name="android:textColor">@color/author</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>
